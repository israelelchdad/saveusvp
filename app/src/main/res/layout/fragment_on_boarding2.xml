<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Fragments.OnBoarding2">
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="102"/>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="220"
        android:layout_gravity="center"
        android:src="@drawable/onboaerding2" />
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="46"/>
    <TextView
        android:layout_width="wrap_content"
        android:textColor="#00b2ab"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:textSize="40sp"
        android:layout_height="0dp"
        android:layout_weight="63"
        android:text="@string/f_b2_simple_text1" />
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="175"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="15">
        <View
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="match_parent"/>
        <Button
            android:layout_width="12dp"
            android:background="@drawable/circle_butten_gray"
            android:id="@+id/f_boarding3_button"
            android:layout_marginRight="12dp"
            android:layout_height="12dp" />

        <Button
            android:layout_width="12dp"
            android:background="@drawable/circle_butten"
            android:id="@+id/f_boarding2_button"
            android:layout_height="12dp"
            android:layout_marginRight="12dp" />

        <Button
            android:layout_width="12dp"
            android:id="@+id/f_boarding1_button"
            android:layout_height="12dp"
            android:background="@drawable/circle_butten_gray"
            android:layout_marginRight="12dp"/>

        <View
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="match_parent"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_weight="21"
        android:layout_height="0dp"/>





</LinearLayout>