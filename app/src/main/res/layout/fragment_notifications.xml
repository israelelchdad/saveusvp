<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".Fragments.Notifications">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#ee6777"
        android:layout_weight="60">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="ההתראות שלי"
            android:textSize="22sp"
            android:textColor="#ffffff"/>

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="18"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="0dp"
        android:layout_weight="80">
        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="17"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="327"
            android:orientation="horizontal"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:background="@drawable/rectangeleofprofile"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:layout_marginEnd="13dp"
                android:layout_height="match_parent"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="מספר חולים"
                    android:gravity="center"
                    android:layout_marginTop="6dp"
                    android:textColor="#737684"
                    android:textSize="15sp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="883"
                    android:gravity="center"
                    android:layout_marginTop="6dp"
                    android:textColor="#00b2ab"
                    android:textSize="30sp"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:background="@drawable/rectangeleofprofile"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:layout_marginEnd="13dp"
                android:layout_height="match_parent"
               >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="מספר מחלימים"
                    android:gravity="center"
                    android:layout_marginTop="6dp"
                    android:textColor="#737684"
                    android:textSize="15sp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="36"
                    android:gravity="center"
                    android:layout_marginTop="6dp"
                    android:textColor="#ffaa00"
                    android:textSize="30sp"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:background="@drawable/rectangeleofprofile"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="מספר מתים"
                    android:gravity="center"
                    android:layout_marginTop="6dp"
                    android:textColor="#737684"
                    android:textSize="15sp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:gravity="center"
                    android:layout_marginTop="6dp"
                    android:textColor="#ee6777"
                    android:textSize="30sp"/>

            </LinearLayout>



        </LinearLayout>
        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="17"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="20"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="0dp"
        android:layout_weight="138">
        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="17"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="327"
            android:orientation="horizontal"
            android:layout_height="match_parent"
            android:background="@drawable/rectangeleofprofile">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="9dp"
            android:textStyle="bold"
            android:layout_marginStart="22dp"
            android:text="אין עדכונים עד כה עבורך"
            android:textSize="16sp"
            android:textColor="#ee6676"/>

        </LinearLayout>
        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="17"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="214"/>

</LinearLayout>